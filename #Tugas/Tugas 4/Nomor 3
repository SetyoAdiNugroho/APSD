#include <iostream>

using namespace std;

int main() {
    int tinggiSegitiga = 5;
    int total = 0;

    for (int i = 1; i <= tinggiSegitiga; ++i) {
        int baris = 0;
        for (int j = 1; j <= i; ++j) {
            int bilanganGenap = j * 2;
            baris += bilanganGenap;

            if (j == 1)
                cout << bilanganGenap;
            else
                cout << " + " << bilanganGenap;
        }
        total += baris;
        cout << " = " << baris << endl;
    }

    return 0;
}
